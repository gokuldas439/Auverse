 <div class="container" style="margin-top: 12rem;">
        <div class="table-responsive">
            <div class="table-wrapper">
                <div class="table-title">
                    <div class="row">
                        <div class="col-xs-5">
                            <h2><b>Orders Management</b></h2>
                        </div>
                      
                    </div>
                </div>
                <table class="table table-striped table-hover mydatatable" id="">
                    <thead>
                        <tr>
                           <th>#</th>
            {{!-- <th>Image</th> --}}
            <th>Product Name</th>
            <th>Order Id</th>
            <th>Ordered On</th>
            <th>Order Status</th>
            <th>Shipping Address</th>
            <th>Status Changer</th>
                        </tr>
                    </thead>
                    <tbody>

                        {{#each ordersList}}
                        <tr>
                        

              <td class="indexNo">{{inc @index}}</td>
              {{!-- <td>
                {{#each product}}
                <img src="{{this.productDetails.images.[0]}}" style="width: 82px; height: 70px;">
               {{/each}}
                </td> --}}
              <td>
                {{#each product}}
                {{this.productDetails.name}}<br>
                {{/each}}
                </td>
              <td>{{this.tracking_id}}
               <a href="/adminViewOrder/{{this.tracking_id}}">view details</a>
              </td>
              {{!-- {{/each}} --}}
            
              <td>{{this.ordered_on}}</td>
            
            {{#eq this.orderstatus "Confirmed"}}
              <td style="color: green; font-weight:500 ">{{this.orderstatus}}</td>
              {{else}}
              {{#eq this.orderstatus "Cancelled by Admin"}}              
              <td style="color: red; font-weight:500 ">{{this.orderstatus}}</td>
              {{else}}
              {{#eq this.orderstatus "Cancelled"}}
              <td style="color: red; font-weight:500 ">{{this.orderstatus}}</td>
              {{else}}
              {{#eq this.orderstatus "Returned"}}
              <td style="color: red; font-weight:500 ">{{this.orderstatus}}</td>
              {{else}}
              <td style="color: rgb(224, 183, 0); font-weight:500 ">{{this.orderstatus}}</td>
              {{/eq}}
              {{/eq}}
              {{/eq}}
              {{/eq}}
            
              

              {{!-- {{#each productstable}} --}}
              <td>{{this.address.firstname}} {{this.address.lastname}},<br>
                  {{this.address.address}},<br>
                  {{this.address.city}},{{this.address.state}},<br>
                 pincode: {{this.address.pincode}}<br>                          
              </td>
              
               <td>
                               
                  {{#eq this.orderstatus "Cancelled"}}

                  <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                   data-bs-target="#exampleModal{{@index}}"  disabled>
                   Cancelled
                  </button>
                  
                  {{else}}
                  {{#eq this.orderstatus "Cancelled by Admin"}}
                  <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                   data-bs-target="#exampleModal{{@index}}"  disabled>
                   Cancelled
                  </button>
                  {{else}}
                  {{#eq this.orderstatus "Delivered"}}
                                <!-- Button trigger modal -->
                 <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                   data-bs-target="#exampleModal{{@index}}"  disabled>
                   Delivered
                  </button>
                  {{else}}
                  <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                   data-bs-target="#exampleModal{{@index}}">
                   Change
                  </button>
                  {{/eq}}
                  {{/eq}}
                  {{/eq}}

                                <!-- Modal -->
                 <div class="modal fade" id="exampleModal{{@index}}" tabindex="-1"
                                    aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel{{@index}}">Edit Product</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                    aria-label="Close"></button>
                                            </div>
                                            <form action="/ChangeOrderStatus/{{this.tracking_id}}" method="post">
                                            <div class="modal-body">
                                              Select Status of the Order :
                                              <select class="form-select" name="orderStatus"  aria-label="Default select example">
                                               
                                              {{!-- <option value="Confirmed" selected>Confirmed</option> --}}
                                              
                                              <option value="Confirmed">Confirmed</option>
                                              <option value="Dispatched">Dispatched</option>
                                              <option value="Shipped">Shipped</option>
                                              <option value="Out of Delivery">Out of Delivery</option>
                                              <option value="Delivered">Delivered</option>
                                              <option value="Cancelled">Cancelled</option>
                                            </select> 
                                            
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary"
                                                    data-bs-dismiss="modal">Close</button>
                                                <button  type="submit"
                                                        class="btn btn-primary">Change</button>
                                            </div>
                                           </form> 
                                        </div>
                                    </div>
                                     </div>

                            </td>
                        </tr>
                        {{/each}}


                    </tbody>
                </table>
            </div>
        </div>
</div>