        <form action="/addCategory" id="sform" method="post">
      <div class="modal-body">

          <div class="mb-3">
            <label for="recipient-name" class="col-form-label">New Category name :</label>
            <input type="text" class="form-control" id="recipient-name" name="category">
          </div>
          <div class="mb-3">
            <label for="recipient-name" class="col-form-label">New Category description :</label>
           <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="description"></textarea>
          </div>
          
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-success" >Add Category</button>
        </form>
      </div>
    </div>
  </div>
</div>

                        </div>
                    </div>
                </div>
                <table class="table table-striped table-hover mydatatable" id="">
