                  class="modal fade"
                  id="exampleModal{{@index}}"
                  tabindex="-1"
                  aria-labelledby="exampleModalLabel"
                  aria-hidden="true"
                >
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5
                          class="modal-title"
                          id="exampleModalLabel{{@index}}"
                        >Update Category</h5>
                        <button
                          type="button"
                          class="btn-close"
